<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
  <% end %>

  <h3>Ingredients</h3>

  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> <%= dose.ingredient.name %></p>


  <%= link_to "Delete", dose_path(dose), method: :delete %>
  <%= link_to "Edit", cocktail_doses_path(dose) %>
  <% end %>

  <br>

  <h3>Add new ingredient</h3>

  <%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.input :description %>
  <%= f.submit "Add new ingredient" %>
  <% end %>


  <%= link_to "Back to list of cocktails", cocktails_path %>

</div>
